<!--<?import javafx.geometry.Insets?>-->
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<!--<?import javafx.scene.control.Label?>-->
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" >
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
            onKeyReleased="#handleKeyReleased"/>
    <CheckBox fx:id="checkID" onAction="#handleChange" text="Clear after Button pressed" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Button fx:id="helloID" text="HelloButton" GridPane.rowIndex="2" GridPane.columnIndex="0"
            onAction="#onButtonClicked"/>
    <Button fx:id="byeID" text="ByeButton" GridPane.rowIndex="2" GridPane.columnIndex="1"
            onAction="#onButtonClicked"/>
</GridPane>